<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_12dp"
        app:cardCornerRadius="@dimen/dimen_16dp"
        app:cardElevation="@dimen/dimen_12dp">

    <RelativeLayout
            android:paddingLeft="@dimen/dimen_16dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingTop="@dimen/dimen_16dp"
            android:id="@+id/rlContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tvTableName"
                android:text="@string/textview_ban_so_1"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size_18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:id="@+id/imgTable"
                android:src="@drawable/banan"
                android:layout_width="@dimen/dimen_165dp"
                android:layout_height="@dimen/dimen_165dp"
                android:contentDescription="@string/textview_ban_so_1"
                android:layout_below="@+id/tvTableName"/>

        <ImageView
                android:id="@+id/imgOrder"
                android:src="@drawable/goimon"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:contentDescription="@string/textview_ban_so_1"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_90dp"
                android:layout_below="@+id/imgTable"/>

        <ImageView
                android:id="@+id/imgPay"
                android:src="@drawable/thanhtoan"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:contentDescription="@string/textview_ban_so_1"
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/imgTable"
                android:layout_toEndOf="@+id/imgOrder"/>

        <ImageView
                android:id="@+id/imgCancel"
                android:src="@drawable/cancel_order"
                android:layout_marginEnd="1dp"
                android:paddingBottom="@dimen/dimen_10dp"
                android:contentDescription="@string/textview_ban_so_1"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_90dp"
                android:layout_below="@+id/imgTable"
                android:layout_alignEnd="@+id/imgTable"
                android:layout_marginTop="1dp"/>

        <TextView
                android:id="@+id/tvId"
                android:text="@string/textview_id_table"
                android:textSize="@dimen/text_size_0sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
